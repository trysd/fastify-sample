{
  // for nodemon
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "commonjs",
    "strict": true,
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": [
    "src",
    "jest.setup.js",
    "src/.app-configure.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "src/test-equip"
  ]
}
