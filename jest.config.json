{
  "roots": ["<rootDir>/src"],
  "testMatch": [
    "**/__tests__/**/*.+(ts)",
    "**/?(*.)+(spec|test).+(ts)",
    "**/test-equip/**/*.+(ts)"
  ],
  "transform": {
    "^.+\\.(ts)$": "ts-jest"
  },
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.ts"],
  "testPathIgnorePatterns": [
    "<rootDir>/src/test-equip/"
  ],
  "coveragePathIgnorePatterns": [
    ".app-configure.ts",
    "test-equip",
    "todo.service.ts"
  ]
}
